{
  "name": "todos",
  "version": "1.0.0",
  "author": "Archie Newman",
  "description": "todos for learning",
  "type": "module",
  "license": "ISC",
  "workspaces": [
    "server",
    "db"
  ],
  "scripts": {
    "clean": "sudo rm -rf db/db_data",
    "clean-all": "sudo rm -rf node_modules db/db_data",
    "format": "prettier --write .",
    "db:start": "docker compose -f ./db/docker-compose.yml up -d",
    "db:stop": "docker compose -f ./db/docker-compose.yml down  --rmi local",
    "db:restart": "npm run db:stop && npm run db:start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoltPlays/todos.git"
  },
  "homepage": "https://github.com/BoltPlays/todos#readme",
  "bugs": {
    "url": "https://github.com/BoltPlays/todos/issues"
  }
}