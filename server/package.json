{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "author": "Archie Newman",
  "description": "server for managing todos",
  "license": "ISC",
  "main": "index.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:dev": "tsc --watch",
    "start:dev": "nodemon build/server.js",
    "dev": "concurrently 'npm run build:dev' 'npm run start:dev'",
    "clean": "rm -rf build",
    "start": "npm run build && node build/server.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "@fastify/mongodb": "^9.0.2",
    "fastify": "^5.4.0"
  }
}